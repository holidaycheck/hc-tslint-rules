{
  "name": "hc-tslint-rules",
  "version": "0.0.1",
  "description": "A couple of handmade tslint rules",
  "scripts": {
    "compile": "tsc -p ./",
    "clean": "rm -rf ./dist/rules",
    "test":
      "yarn clean && yarn compile && yarn jest && tslint --rules-dir ./dist/rules --test `find ./test/tslint/rules -type d`",
    "precommit": "lint-staged",
    "postinstall": "tsc"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "21.1.5",
    "@types/node": "8.0.47",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.3.0",
    "prettier": "1.7.4",
    "typescript": "2.6.1",
    "tslint": "5.8.0",
    "ts-jest": "21.1.4"
  },
  "peerDependencies": {
    "tslint": ">=5.8.0",
    "typescript": ">=2.6.1"
  },
  "lint-staged": {
    "*.+(ts|tsx)": ["prettier --single-quote --write", "git add"]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./test/tsconfig.json"
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js"]
  }
}
